@using TravelTripProje.Models.Entities
@model List<Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Default/Index.cshtml";
}

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">Tatil & Sehayat Bloğum</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restaurantlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacaklar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araç Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">

                    <div class="slider" style="width:650px; height:365px;">
                        <ul class="rslides" id="slider1">
                            @foreach (var item in Model)
                            {
                                <li><img src="@item.BlogImage" alt=""></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>Tatil Seyahat Bloğuna HoşGeldiniz!</h3>
                <p>
                    Bu Projeyi kasım 25inde başlayıp kasım 27sinde bitirmeyi planlıyorum. Gezip
                    gördüğüm yerleri sizlerle paylşamak için kodlamasını tamamen mvc5 üzerine kurulu dinamik bir web projesi geliştirdik. Hem Türkiyeden hem de yurt dışında gezip gördüğüm yerleri blog yazıları olarak sizlerle paylaşmak niyetindeyim. Umuyorum ki yazdıklarımı beğenirsiniz,
                    keyifli okumalar sağlıklı günler dilerim.
                </p>
            </div>
            <div class="grids">
                <div class="box1">
                    @Html.Action("Partial1", "Home")

                    @Html.Action("Partial2", "Home")

                    @Html.Action("Partial3", "Home")

                    
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>